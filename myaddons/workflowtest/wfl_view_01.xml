<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="amt_wkf01_form_view">
			<field name="name">amt.wkf01.form.view</field>
			<field name="model">amt.wfl01</field>
			<field name="arch" type="xml">
				<form string="Form" version="7.0">
					<header>
						<button name="amt_action_subflow" string="View Workflow2" type="object" class="oe_highlight"/>
						<button name="test_email" string="Send by mail" type="object" />
						<button name="process" string="Open" states="draft" class="oe_highlight" />
						<button name="%(wkf02_action_extra)d" string="Next01.."
							states="process" type="action" class="oe_highlight" />
						<field name="state" widget="statusbar" statusbar_visible="draft,process,done1" />

					</header>
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="amt_wkf01_tree_view">
			<field name="name">amt.wkf01.form.view</field>
			<field name="model">amt.wfl01</field>
			<field name="arch" type="xml">
				<tree string="tree workflow01" version="7.0">
					<field name="code" />
					<field name="name" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="wkf01_action">
			<field name="name">Workflow01</field>
			<field name="res_model">amt.wfl01</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="amt_wkf01_tree_view" />
		</record>
		<menuitem id="amt_test_wfl01_mail" name="Workflow01" parent="amt_workflow_wkf"
			action="wkf01_action" />
	</data>
</openerp>