<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="mailtest_form_view">
			<field name="name">mail.test.form.view</field>
			<field name="model">hp.mailtest</field>
			<field name="arch" type="xml">
				<form string="Form" version="7.0">
					<header>
						<button name="test_email" string="Send by Email" type="object" />
					</header>
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
							<field name="email" />
							<field name="user_email" />
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="mailtest_tree_view">
			<field name="name">mail.test.tree.view</field>
			<field name="model">hp.mailtest</field>
			<field name="arch" type="xml">
				<tree string="mailtest tree view" version="7.0">
					<field name="code" />
					<field name="name" />
					<field name="email" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="mailtest_action">
			<field name="name">Test Form</field>
			<field name="res_model">hp.mailtest</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="mailtest_tree_view" />
		</record>



		<menuitem id="mail_test_main_menu" name="Mail" />
		<menuitem id="mail_test_mail_menu" name="Mail" parent="mail_test_main_menu" />
		<menuitem id="mailtest_template_form" name="Mail Template"
			parent="mail_test_mail_menu" action="mailtest_action" />
	</data>
</openerp>
