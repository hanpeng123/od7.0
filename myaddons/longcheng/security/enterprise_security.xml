<?xml version="1.0" ?>
<openerp>
	<data>
		<record model="ir.module.category" id="longcheng_enterprise_category">
			<field name="name">longcheng.enterprise.category</field>
			<field name="description">It is an enterprise access category.</field>
			<field name="sequence">16</field>
		</record>
		<record id="group_etp_user" model="res.groups">
			<field name="name">Longcheng/Enterprise/Users</field>
			<field name="category_id" ref="longcheng_enterprise_category" />
			<field name="users" eval="[(4, ref('base.user_root'))]" />
		</record>
		<record id="group_check_manager" model="res.groups">
			<field name="name">Longcheng/Enterprise/Manager</field>
			<field name="category_id" ref="longcheng_enterprise_category" />
			<field name="users" eval="[(4, ref('base.user_root'))]" />
		</record>
		<record id="group_all_enterprise" model="res.groups">
			<field name="name">Longcheng/Enterprise/All</field>
			<field name="category_id" ref="longcheng_enterprise_category" />
			<field name="users" eval="[(4, ref('base.user_root'))]" />
		</record>


		<record id="etpuser_only_modify_itself" model="ir.rule">
			<field name="name">Enterprise users can only CRUD the data created by themselves.</field>
			<field name="model_id" ref="model_longcheng_enterprise" />
			<field name="groups" eval="[(4, ref('longcheng.group_etp_user'))]" />
			<field name="perm_read" eval="1" />
			<field name="perm_write" eval="1" />
			<field name="perm_create" eval="1" />
			<field name="perm_unlink" eval="1" />
			<field name="domain_force">
				['|', ('create_uid', '=', False),('create_uid', '=', user.id)]
			</field>
		</record>
	</data>
</openerp>