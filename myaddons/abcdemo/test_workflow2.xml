<?xml version="1.0"?>
<openerp>
	<data>
		<record model="workflow" id="wkf_amttest_f02">
			<field name="name">amt.wkf02</field>
			<field name="osv">amt.wfl02</field>
			<field name="on_create">True</field>
		</record>

		<record model="workflow.activity" id="act_amttest_doc">
			<field name="wkf_id" ref="wkf_amttest_f02" />
			<field name="flow_start">True</field>
			<field name="name">draft</field>
			<field name="kind">function</field>
			<field name="action">amt_test_doc()</field>
		</record>

		<record model="workflow.activity" id="act_amttest_agreement">
			<field name="wkf_id" ref="wkf_amttest_f02" />
			<field name="name">process</field>
			<field name="kind">function</field>
			<field name="action">amt_test_agreement()</field>
		</record>


		<record model="workflow.activity" id="act_amttest_payment">
			<field name="wkf_id" ref="wkf_amttest_f02" />
			<field name="name">done</field>
			<field name="kind">function</field>
			<field name="action">amt_test_payment()</field>
			<field name="signal_send">subflow.payment</field>
 			<field name="flow_stop">True</field> 
		</record>


		<record model="workflow.transition" id="t01">
			<field name="act_from" ref="act_amttest_doc" />
			<field name="act_to" ref="act_amttest_agreement" />
			<field name="signal">agreement</field>
		</record>

		<record model="workflow.transition" id="t02">
			<field name="act_from" ref="act_amttest_agreement" />
			<field name="act_to" ref="act_amttest_payment" />
			<field name="signal">payment</field>
		</record>

	</data>
</openerp>
