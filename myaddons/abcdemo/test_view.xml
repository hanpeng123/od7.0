<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="amt_form_form_view">
			<field name="name">amt.from.form.view</field>
			<field name="model">amt.form</field>
			<field name="arch" type="xml">
				<form string="Form" version="7.0" edit="false" create="false">
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="amt_test_form_view">
			<field name="name">amt.test.form.view</field>
			<field name="model">amt.test</field>
			<field name="arch" type="xml">
				<form string="Form" version="7.0">
					<header>
						<button name="test_pop_window" string="Send by Email" type="object" />
						

					</header>
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
							<field name="mailaddress" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="amt_test_form_view_mail">
			<field name="name">amt.test.form.view.mail</field>
			<field name="model">amt.test</field>
			<field name="arch" type="xml">
				<form string="Form" version="7.0">
					<header>
						<button name="test_email" string="Send by Email" type="object" />
					</header>
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
							<field name="mailaddress" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="test_action">
			<field name="name">Test Form</field>
			<field name="res_model">amt.test</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="amt_test_form_view" />
		</record>

		<record model="ir.actions.act_window" id="test_action_mail">
			<field name="name">Test Form</field>
			<field name="res_model">amt.test</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="amt_test_form_view_mail" />
		</record>


		<menuitem id="amt_test_main_menu" name="Tests" />
		<menuitem id="amt_test_test_menu" name="Tests" parent="amt_test_main_menu" />
		<menuitem id="amt_test_test_form" name="Test Form" parent="amt_test_test_menu"
			action="test_action" />
		<menuitem id="amt_test_test_form_mail" name="Test Mail"
			parent="amt_test_test_menu" action="test_action_mail" />
	</data>
</openerp>
