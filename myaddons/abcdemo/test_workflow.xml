<?xml version="1.0"?>
<openerp>
	<data>
		<record model="workflow" id="wkf_amttest_base">
			<field name="name">amt.wkf01</field>
			<field name="osv">amt.wfl01</field>
			<field name="on_create">True</field>
		</record>

		<record model="workflow.activity" id="act_amttest_draft">
			<field name="wkf_id" ref="wkf_amttest_base" />
			<field name="flow_start">True</field>
			<field name="name">draft</field>
			<field name="kind">function</field>
			<field name="action">amt_test_draft()</field>
		</record>

		<record model="workflow.activity" id="act_amttest_process">
			<field name="wkf_id" ref="wkf_amttest_base" />
			<field name="name">process</field>
			<field name="kind">subflow</field>
			<field name="subflow_id" search="[('name','=','amt.wkf02')]"/>
			<field name="action">amt_test_process()</field>
		</record>


		<record model="workflow.activity" id="act_amttest_done">
			<field name="wkf_id" ref="wkf_amttest_base" />
			<field name="name">done</field>
			<field name="kind">function</field>
			<field name="action">amt_test_done()</field>
			<field name="flow_stop">True</field>
		</record>


		<record model="workflow.transition" id="t1">
			<field name="act_from" ref="act_amttest_draft" />
			<field name="act_to" ref="act_amttest_process" />
			<field name="signal">process</field>
		</record>

		<record model="workflow.transition" id="t2">
			<field name="act_from" ref="act_amttest_process" />
			<field name="act_to" ref="act_amttest_done" />
			<field name="signal">subflow.payment</field>
		</record>

	</data>
</openerp>
